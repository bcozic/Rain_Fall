#include <stdlib.h>
#include <stdio.h>
#include <string.h>

char	*data1 = NULL;
char	*data2 = NULL;

/*
** Here, I will take some liberties, and call some functions
** even though the binary doesn't call them directly (such as
** strncmp and strlen), since this is the strict equivalent
** of what it does.
*/
int		main(void)
{
	char	buffer[128];
	start:
	printf("%p, %p \n", data1, data2);
	while (fgets(buffer, 128, stdin) != NULL)
	{
		printf("%p, %p \n", data1, data2);
		if (strncmp(buffer, "auth ", 5) == 0)
		{
			data2 = malloc(4);
			data2[0] = '\0';
			if (strlen(buffer + 5) < 30)
			{
				strcpy(data2, buffer + 5);
			}
		}
		if (strncmp(buffer, "reset", 5) == 0)
		{
			free(data2);
		}
		if (strncmp(buffer, "service", 6) == 0)
		{
			data1 = strdup(buffer + 7);
		}
		if (strncmp(buffer, "login", 5) == 0)
		{
			if (data2[32] != 0)
				system("/bin/sh");
			else
			{
				fwrite("Password:\n", 1, 10, stdout);
			}
		}
	}
	return 0;
}
