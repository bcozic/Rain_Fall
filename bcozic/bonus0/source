void	p(char *str, char *str2)
{
	char	buff[4096];
	char	*str_ptr;

	puts(str2);
	read(0, buff, 4096);
	str_ptr = strchr(0xa, buff);
	str_ptr[0] = '\0';
	strncpy(str, buff, 20);
}

void	pp(char *str)
{
	int		i = 0;
	char	str2[20];
	char	str3[20];

	p(str2, " - ");
	p(str3, " - ");
	strcpy(str, str2);
	while (str[i] && i < 0xffffffff)
		i++;
	str[i] = ' ';
	str[i + 1] = '\0';
	strcat(str, str3);
}

int		main()
{
	char	str[42];

	pp(str);
	puts(str);
	return (0);
}
